# FlashFusion Environment Variables
# Copy this file to .env and fill in the values
# NEVER commit .env to version control

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api

# Authentication
# JWT secrets should be at least 32 characters and randomly generated
VITE_JWT_SECRET=your-jwt-secret-here-minimum-32-characters
VITE_REFRESH_TOKEN_SECRET=your-refresh-token-secret-minimum-32-characters

# Database Configuration (Backend)
DATABASE_URL=postgresql://user:password@localhost:5432/flashfusion?sslmode=require&sslminprotocolversion=TLSv1.3

# Redis Configuration (for rate limiting, sessions)
REDIS_URL=redis://localhost:6379

# Encryption
# AES-256 encryption key (must be 32 bytes/64 hex characters)
ENCRYPTION_KEY=your-256-bit-aes-encryption-key-64-hex-characters

# Security
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring & Observability
SENTRY_DSN=
DATADOG_API_KEY=

# Email Service (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@flashfusion.com

# OAuth/Social Login (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Feature Flags
FEATURE_MFA_ENABLED=true
FEATURE_AUDIT_TRAIL_ENABLED=true

# Deployment
NODE_ENV=development
PORT=3000

# Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=https://your-csp-report-endpoint.com/report

# Incident Response
PAGERDUTY_API_KEY=
PAGERDUTY_SERVICE_ID=
INCIDENT_WEBHOOK_URL=
